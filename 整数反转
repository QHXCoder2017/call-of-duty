Python

class Solution:
    def reverse(self, x):
        if x is None:
            return x
        x_str = str(x)
        if x_str[0] == "-":
            x_str_tmp = x_str[1:]
            x_int = int(x_str[0] + x_str_tmp[::-1])
        else:
            x_int = int(x_str[::-1])
        if x_int < -2147483648 or x_int > 2147483648:
            return 0
        else:
            return x_int
            
