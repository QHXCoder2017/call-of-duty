Python

class Solution:
    def reverseString(self, s):
        # 切片法
        result = s[::-1]
        return result
        
C++

class Solution
{
public:
    string reverseString(string s)
    {
        string str = s;
        int len = s.size();
        for(int i = 0; i < len; i++)
        {
            str[i] = s[len-i-1];
        }
        return str;
    }
};
